<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD1BC"
    tools:context=".DetailFragment">


    <TextView
        android:id="@+id/phone_text"
        android:layout_width="370dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:text="(222)229-229"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_text" />

    <TextView
        android:id="@+id/post_text"
        android:layout_width="134dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:text="16100"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_text" />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="123 High Way St"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serve_text" />

    <TextView
        android:id="@+id/style_text"
        android:layout_width="134dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:text="AMERICAN"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_text" />

    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/food_american"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurant_text"
        android:layout_width="370dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:text="The Liberty Hotel"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_image" />

    <TextView
        android:id="@+id/serve_text"
        android:layout_width="134dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:text="Full Serve"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/style_text"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_text" />

    <TextView
        android:id="@+id/review_text"
        android:layout_width="363dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        android:text="Add a review"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar2"
        app:layout_constraintVertical_bias="0.064" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_text" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="93dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="EDIT"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toEndOf="@+id/ratingBar2"
        app:layout_constraintTop_toBottomOf="@+id/phone_text" />
</androidx.constraintlayout.widget.ConstraintLayout>