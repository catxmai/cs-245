<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/small_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Small"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/med_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Medium"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/large_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Large"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/next_button_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="#9C7CD6"
        android:text="Next"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/pizza_num_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="400dp"
        android:hint="Number of pizza"
        android:textAlignment="center"/>

    <SeekBar
        android:id="@+id/number_bar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="400dp"
        android:layout_height="37dp"
        android:layout_marginTop="550sp"
        android:max="3"
        android:progress="1" />

    <TextView
        android:id="@+id/seekview"
        android:layout_marginTop="510sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
</FrameLayout>